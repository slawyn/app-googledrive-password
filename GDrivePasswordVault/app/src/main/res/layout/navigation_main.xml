<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.navigation.NavigationView xmlns:android="http://schemas.android.com/apk/res/android"
                                                       android:id="@+id/nagivation_main"
                                                       android:layout_width="match_parent"
                                                       android:layout_height="match_parent"
                                                       android:layout_gravity="start"
                                                       android:background="#22241D"

                                                       android:fitsSystemWindows="true" android:isScrollContainer="true"
                                                       android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/statusBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:gravity="center"
            android:text="Password Vault v0.1" android:textColor="#D30158" android:textSize="24sp" android:textStyle="bold"/>
        <TextView
            android:id="@+id/logger"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:isScrollContainer="false" android:text=""
            android:textSize="8sp"
            android:gravity="bottom"
            android:scrollbars = "vertical"/>
    </LinearLayout>
</com.google.android.material.navigation.NavigationView>